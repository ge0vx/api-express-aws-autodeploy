                ],
                "summary": "Get Track with given Title",
                "parameters": [
                    {
                        "in": "path",
                        "name": "trackTitle",
                        "required": true,
                        "description": "Track title"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Failed. Track not found."
                    }
                }
            }
        }
