    "paths": {
        "/searchByTitle/{trackTitle}": {
            "parameters": [
                {
                    "name": "trackTitle",
                    "in": "path",
                    "required": true,
                    "description": "Title of the track that we want to match",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
